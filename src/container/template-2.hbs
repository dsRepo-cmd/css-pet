<div class='page'>
  <div class='page_content'>

    <header class='page_block'>
      <div class='header'>
          {{> logo }}
          <div class='header_nav_right'>
            {{> nav list=header  }}
          </div>
      </div>
    </header>

    <section class='page_block'>
      <div class='hero'>
        {{#with hero}}
          {{> hero title=title text=text}}
          <a
            class='button'
            href='{{button.url}}'
          >{{button.text}}</a>
        {{/with}}
      </div>
    </section>

    <section class='page_block'>
      <div class='row g-4'>
        {{#each preview}}
          <div class='col-6'>
            {{> cardPreview data=this}}
          </div>
        {{/each}}
      </div>
    </section>

    <main class='page_block'>
      <div class='main'>
        <div class='row g-0'>
          <div class='col-12'>
            <div class='list_header'>
                  <h2 class='list_title'>List of posts</h2>
                  <div class='category_list'>
                    {{#each categories}}
                      <button
                        class='category_button'
                      >{{text}}</button>
                    {{/each}}
                  </div>
            </div>
          </div>
          <div class='col-7'>
            <div class='list'>
              {{#each news}}
                {{>cardPost data=this}}
              {{/each}}
            </div>
          </div>
          <div class='col-5'>
            <aside class='list_aside'>
              <div class='about'>
                <h3 class='about_title'>About</h3>
                <p class='about_text'>{{about}}</p>
              </div>
              {{>linkList data=archive title='Archives'}}
              {{>linkList data=social title='Social'}}
            </aside>
          </div>
        </div>
      </div>
    </main>

    <footer class='page_block'>
      <div class='footer'>
        <div>
          {{>logo}}
          <span class='footer_copyright'>Â© 2024</span>
        </div>
        {{#each footer}}
          <div class="footer_col">
            <span class='footer_title'>{{title}}</span>
            {{> nav list=links isVertical=true}}
          </div>
        {{/each}}
      </div>
    </footer>

  </div>
</div>